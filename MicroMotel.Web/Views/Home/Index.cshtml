    @{
    ViewData["Title"] = "Index";

    Layout = "~/Views/Shared/_mainlayout.cshtml";

    var count = 0;
}

@model List<PropertyViewModel>
<h2>Kurslar</h2>
<hr />
<br />
@if (Model.Any())
{
    @foreach (var item in Model)
    {
        count++;
        if (count == 1 || (count % 3) == 1)
        {
            @Html.Raw("<div class='row row-cols-1 row-cols-md-3 g-4 mb-2 '>")
        }
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@item.Address.City</h5>
                    <p class="card-text">@item.Name</p>
                    <h4 class="text-primary">@item.FloorCount TL</h4>
                    <div>

                        <a asp-controller="Home" asp-action="Detail" class="btn btn-success" asp-route-id="@item.Id">Detail</a>
                    </div>

                </div>
            </div>
        </div>
        if (count % 3 == 0)
        {
            @Html.Raw("</div>")
        }
    }




}

                    <style>
    .card {
        border: 1px solid #bbb; /* İnce gri kenarlık */
        border-radius: 8px; /* Kartın köşelerini yuvarla */
        box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1); /* Hafif bir gölge */
        transition: border-color 0.3s, box-shadow 0.3s; /* Kenarlık ve gölge için yumuşak geçiş */
    }

        .card:hover {
            border-color: #333; /* Kenarlık rengini siyaha dönüştür */
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2); /* Hafif gölgeyi artır */
        }

                    </style>