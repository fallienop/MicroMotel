
@model MicroMotel.Web.Models.Motel.Room.RoomViewModel
@{
    ViewData["Title"] = "RoomDetails";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="container">
    <h2>Room Details</h2>
    <div class="room-details">
        <div class="room-info">
            <div class="room-label">Room ID:</div>
            <div class="room-value">@Model.Id</div>
        </div>
        <div class="room-info">
            <div class="room-label">Price:</div>
            <div class="room-value">@Model.Price</div>
        </div>
        <div class="room-info">
            <div class="room-label">Bed Count:</div>
            <div class="room-value">@Model.BedCount</div>
        </div>
        <div class="room-info">
            <div class="room-label">Has Bath:</div>
            <div class="room-value">@Model.HasBath</div>
        </div>
        <div class="room-info">
            <div class="room-label">Has Fridge:</div>
            <div class="room-value">@Model.HasFridge</div>
        </div>
        <div class="room-info">
            <div class="room-label">Has TV:</div>
            <div class="room-value">@Model.HasTv</div>
        </div>
        <div class="room-info">
            <div class="room-label">Has Network:</div>
            <div class="room-value">@Model.HasNetwork</div>
        </div>
        <div class="room-info">
            <div class="room-label">Has AC:</div>
            <div class="room-value">@Model.HasAC</div>
        </div>
        <div class="room-info">
            <div class="room-label">Floor:</div>
            <div class="room-value">@Model.Floor</div>
        </div>
        <div class="room-info">
            <div class="room-label">Status:</div>
            <div class="room-value">@Model.Status</div>
        </div>
        <div class="room-info">
            <div class="room-label">Property ID:</div>
            <div class="room-value">@Model.PropertyId</div>
        </div>

        <div class="buttons-container">
            <a href="/Admin/UpdateRoom/@Model.Id" class="btn btn-warning">Update</a>
            <a href="/Admin/DeleteRoom/@Model.Id" class="btn btn-danger">Delete</a>
        </div>
    </div>
</div>

<style>
    .room-details {
        border: 1px solid #ddd;
        padding: 20px;
        margin: 20px 0;
    }

     .buttons-container {
        display: grid;
        grid-template-columns: repeat(2, auto); /* 2 sütun oluşturun */
        gap: 20px; /* İstenilen boşluğu ayarlayın */
        margin-top: 20px;
    }

    .btn {
        width: 300px;
        padding: 8px 10px;
        text-align: center;
        margin-left: 60px; /* Add a little margin to the left */
    }
    .room-info {
        display: flex;
        margin-bottom: 10px;
    }

    .room-label {
        width: 120px;
        font-weight: bold;
    }

    .room-value {
        flex: 1;
    }
</style>