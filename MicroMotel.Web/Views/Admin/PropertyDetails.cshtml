
@{
    ViewData["Title"] = "PropertyDetails";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

@model MicroMotel.Web.Models.Motel.Property.PropertyViewModel
<div class="container">
    <h2>Property Details</h2>
    <div class="property-details">
        <div class="property-info">
            <div class="property-label">Property ID:</div>
            <div class="property-value">@Model.Id</div>
        </div>
        <div class="property-info">
            <div class="property-label">Property Name:</div>
            <div class="property-value">@Model.Name</div>
        </div>
        <div class="property-info">
            <div class="property-label">Room Count:</div>
            <div class="property-value">@Model.RoomCount</div>
        </div>
        <div class="property-info">
            <div class="property-label">Floor Count:</div>
            <div class="property-value">@Model.FloorCount</div>
        </div>
        <div class="property-info">
            <div class="property-label">Has Parking:</div>
            <div class="property-value">@Model.HasParking</div>
        </div>
        <div class="property-info">
            <div class="property-label">Has Open Space:</div>
            <div class="property-value">@Model.HasOpenSpace</div>
        </div>
        <div class="property-info">
            <div class="property-label">City:</div>
            <div class="property-value">@Model.Address.City</div>
        </div>
        <div class="property-info">
            <div class="property-label">District:</div>
            <div class="property-value">@Model.Address.District</div>
        </div>
        <div class="property-info">
            <div class="property-label">Street:</div>
            <div class="property-value">@Model.Address.Street</div>
        </div>
        <div class="property-info">
            <div class="property-label">Building:</div>
            <div class="property-value">@Model.Address.Building</div>
        </div>
   
