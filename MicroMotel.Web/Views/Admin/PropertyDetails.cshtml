<style>
    .property-details {
        border: 1px solid #ddd;
        padding: 20px;
        margin: 20px 0;
    }

    .buttons-container {
        display: grid;
        grid-template-columns: repeat(2, auto); /* 2 sütun oluşturun */
        gap: 20px; /* İstenilen boşluğu ayarlayın */
        margin-top: 20px;
    }

    .btn {
        width: 300px;
        padding: 8px 10px;
        text-align: center;
        margin-left: 60px; /* Add a little margin to the left */
    }

    .property-info {
        display: flex;
        margin-bottom: 10px;
    }

    .property-label {
        width: 120px;
        font-weight: bold;
    }

