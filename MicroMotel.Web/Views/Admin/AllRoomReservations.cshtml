
@{
    ViewData["Title"] = "AllRoomReservations";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<h2>AllRoomReservations</h2>

@model List<RoomRViewModel>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
   @*         <div class="title-and-button-container">
                <h4 class="card-title">Properities</h4>

                <a href="/Admin/AddProperty" class="btn btn-primary btn-sm"> + Add Property </a>

            </div>*@

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                UserName
                            </th>
                            <th>
                                PropertyId
                            </th>
                            <th>
                                RoomId
                            </th>
                            <th>
                                R.Start
                            </th>
                            <th>
                                R.End
                            </th>
                            <th></th>
                            <th></th>
                            <th></th>
                           
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>




                                <td>
                                    @item.UserID
                                </td>
                                <td>
                                    @item.PropertyId
                                </td>
                                <td>
                                    @item.RoomId
                                </td>
                                <td>
                                    @item.ReservStart
                                </td>
                                <td>
                                    @item.ReservEnd
                                </td>
                                <td><a href="/Admin/UpdateProperty/@item.Id" class="btn btn-warning btn-sm">Update</a></td>
                                <td><a href="/Admin/DeleteProperty/@item.Id" class="btn btn-danger btn-sm">Delete</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>


        </div>
    </div>
</div>

