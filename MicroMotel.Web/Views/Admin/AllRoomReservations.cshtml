
@{
    ViewData["Title"] = "AllRoomReservations";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<h2>AllRoomReservations</h2>

@model List<RoomRViewModel>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
   @*         <div class="title-and-button-container">
                <h4 class="card-title">Properities</h4>

                <a href="/Admin/AddProperty" class="btn btn-primary btn-sm"> + Add Property </a>

            </div>*@

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                UserName
                            </th>
                            <th>
                                PropertyId
                            </th>
                            <th>
                                RoomId
                            </th>
                            <th>
                                R.Start
                            </th>
                            <th>
                                R.End
                            </th>
                            <th></th>
                            <th></th>
                           
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model is null)
                        {
                            
                        }
                        else{
                        @foreach (var item in Model)
                            {
                                <tr>




                                    <td>
                                        @item.UserName
                                    </td>
                                    <td>
                                        @item.PropertyId
                                    </td>
                                    <td>
                                        @item.RoomId
                                    </td>
                                    <td>
                                        @item.ReservStart.ToString("yyyy-MM-dd HH:mm")
                                    </td>
                                    <td>
                                        @item.ReservEnd.ToString("yyyy-MM-dd HH:mm")
                                    </td>
                                    <td><a href="/Admin/DeleteRoomReserv/@item.Id" class="btn btn-danger btn-sm">Delete</a></td>
                                </tr>
                            }
                            }
                        
                    </tbody>
                </table>
            </div>


        </div>
    </div>
</div>

