
    @{
        ViewData["Title"] = "PropertyWithRooms";
        Layout = "~/Views/Shared/_adminLayout.cshtml";
    }

    @model List<MicroMotel.Web.Models.Motel.Property.PropertyWithRoomsViewModel>
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
            <div class="title-and-button-container">
                <h4 class="card-title">Rooms</h4>
                <div class="action-buttons">
                    <a href="/Admin/AddRoom/@ViewBag.propid" class="btn btn-primary btn-sm">+ Add Room</a>
                </div>
            </div>

                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    #
                                </th>
                                <th>
                                   Price
                                </th>
                          
                           

                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                        @if (Model is not null)
                        {
                            @foreach (var item in Model)
                            {


                                <tr>

                                    <td>
                                        @item.Number
                                    </td>

                                    <td>
                                        @item.Price
                                    </td>


                                    <td><a href="/Admin/RoomDetails/@item.Id" class="btn btn-info btn-sm">Details</a></td>
                                </tr>

                            }

                        }
                    </tbody>
                    </table>
                </div>
            </div>


        </div>
    </div>
<style>
    .title-and-button-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px; /* Increase the margin to have more space between title and buttons */
    }

    .card-title {
        margin: 0;
    }

    .action-buttons {
        display: flex;
        gap: 10px; /* Adjust the gap between the buttons */
    }
</style>