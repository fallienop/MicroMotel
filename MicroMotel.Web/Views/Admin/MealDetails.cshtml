        <a href="/Admin/UpdateMeal/@Model.Id" class="btn btn-warning">Update</a>
        <a href="/Admin/DeleteMeal?id=@Model.Id&propid=@Model.PropertyId" class="btn btn-danger">Delete</a>

    </div>
</div>

<style>
    .Meal-details {
        border: 1px solid #ddd;
        padding: 20px;
        margin: 20px 0;
    }

    .buttons-container {
        display: grid;
        grid-template-columns: repeat(2, auto); /* 2 sütun oluşturun */
        gap: 20px; /* İstenilen boşluğu ayarlayın */
        margin-top: 20px;
    }

    .btn {
        width: 300px;
        padding: 8px 10px;
        text-align: center;
        margin-left: 60px; /* Add a little margin to the left */
    }

    .Meal-info {
        display: flex;
        margin-bottom: 10px;
    }

    .Meal-label {
        width: 120px;
        font-weight: bold;
    }

    .Meal-value {
        flex: 1;
    }
</style>