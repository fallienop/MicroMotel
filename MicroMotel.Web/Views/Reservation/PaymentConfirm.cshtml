@using MicroMotel.Web.Models.FakePayment;

@{
    Layout = null;
}
@model VerificationCode

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ortada Kutucuk Örneği</title>
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            background-color: #f0f0f0;
        }

        .container {
            background-color: #fff;
            border: 1px solid #ddd;
            padding: 20px 40px; /* Sağa padding ekledik */
            border-radius: 5px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        .input-container {
            margin-top: 10px;
            margin-right: 15px;

        }
        

        label {
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
        }

        input {
            width: 100%;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 3px;
        }

        button {
            margin-top: 10px;
            padding: 8px 15px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 3px;
            cursor: pointer;
        }
    </style>
</head>

<body>
  <form asp-action="paymentconfirm" asp-controller="Reservation" method="post">  <div class="container">
        <h2>Code has sent to your email</h2>
            <div class="input-container">
                <label for="verificationCode">Verification code:</label>
                <input type="text" asp-for="@Model.Code" placeholder="Enter code">
                <span class="text-danger">@Html.ValidationMessageFor(model => model.Code)</span>
            </div>
        <button class="btn btn-sm btn-outline-behance" type="submit" >Verify</button>
    </div>
    </form>
</body>
</html>
