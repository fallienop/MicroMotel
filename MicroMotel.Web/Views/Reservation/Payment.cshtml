    border: 2px solid #2d4dda;
    box-shadow: none;
}

    .flex-column {
        flex-direction: column !important;
    }

    .d-flex {
        display: flex !important;
    }
.text {
    font-size: 14px;
    font-weight: 600;
}

::placeholder {
    font-size: 14px;
    font-weight: 600;
}
                </style>